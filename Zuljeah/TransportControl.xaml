<UserControl x:Class="Zuljeah.TransportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Eos.Mvvm.Converters;assembly=Eos.Mvvm"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:PlayerPage}"
             d:DesignHeight="450" d:DesignWidth="800">
  
  <UserControl.Resources>
    <converters:EventedConverter x:Key="TimeSpanConverter" OnConvert="TimeSpanConverter_OnOnConvert" /> 
  </UserControl.Resources>

  <DockPanel>

    <Border DockPanel.Dock="Top" Background="DarkGreen" Height="35" >
      <TextBlock Text="{Binding Path=Transport, Converter={StaticResource TimeSpanConverter}, TargetNullValue=No connection}" DockPanel.Dock="Top" 
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 FontFamily="Consolas" FontSize="20" Foreground="LightYellow"/>
    </Border>

  </DockPanel>

</UserControl>
